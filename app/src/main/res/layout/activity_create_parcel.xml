<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createParcel">

    <ImageView
        android:id="@+id/imageView_delivery"
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:scaleType="centerCrop"
        android:scaleY="1.09"
        android:src="@mipmap/parcel_head"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </ImageView>

    <ImageButton
        android:id="@+id/imageButton_delivery"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/parcel_next"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_delivery"
        app:layout_constraintEnd_toEndOf="@+id/imageView_delivery"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="@+id/imageView_delivery"
        app:layout_constraintTop_toTopOf="@+id/imageView_delivery"
        app:layout_constraintVertical_bias="0.389">


    </ImageButton>

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/add_details"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_delivery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.231"
        app:layout_constraintStart_toEndOf="@+id/imageButton_delivery"
        app:layout_constraintTop_toTopOf="@+id/imageView_delivery"
        app:layout_constraintVertical_bias="0.391" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="136dp"
        android:layout_marginRight="136dp"
        android:fontFamily="@font/sitka_small"
        android:text="Parcel"
        android:textColor="#fff"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_delivery"
        app:layout_constraintEnd_toEndOf="@+id/imageView_delivery"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageButton3"
        app:layout_constraintTop_toTopOf="@+id/imageView_delivery"
        app:layout_constraintVertical_bias="0.365">

    </TextView>

    <TextView
        android:id="@+id/product_size"
        android:layout_width="166dp"
        android:layout_height="36dp"
        android:text="Product Size:"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_delivery"
        app:layout_constraintVertical_bias="0.063"
        android:textColor="#433E92"
        >

    </TextView>

    <EditText
        android:paddingLeft="15dp"
        android:scrollbars="horizontal"
        android:id="@+id/product_size_input"
        android:layout_width="197dp"
        android:layout_height="50dp"
        android:background="@mipmap/parcel_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/product_size"
        app:layout_constraintTop_toBottomOf="@+id/imageView_delivery"
        app:layout_constraintVertical_bias="0.052">

    </EditText>

    <TextView
        android:id="@+id/product_type"
        android:layout_width="166dp"
        android:layout_height="36dp"
        android:text="Product Type:"
        android:textColor="#433E92"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_delivery"
        app:layout_constraintVertical_bias="0.161">

    </TextView>

    <EditText
        android:paddingLeft="15dp"
        android:scrollbars="horizontal"
        android:id="@+id/product_type_input"
        android:layout_width="197dp"
        android:layout_height="50dp"
        android:background="@mipmap/parcel_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/product_size"
        app:layout_constraintTop_toBottomOf="@+id/imageView_delivery"
        app:layout_constraintVertical_bias="0.164">

    </EditText>

    <TextView
        android:id="@+id/product_destination"
        android:layout_width="191dp"
        android:layout_height="42dp"
        android:text="Product Destination:"
        android:textColor="#433E92"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_delivery"
        app:layout_constraintVertical_bias="0.281">

    </TextView>

    <EditText
        android:paddingLeft="15dp"
        android:scrollbars="horizontal"
        android:id="@+id/product_destination_input"
        android:layout_width="193dp"
        android:layout_height="55dp"
        android:background="@mipmap/parcel_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/product_size"
        app:layout_constraintTop_toBottomOf="@+id/imageView_delivery"
        app:layout_constraintVertical_bias="0.264">

    </EditText>

    <TextView
        android:id="@+id/product_quantity"
        android:layout_width="191dp"
        android:layout_height="42dp"
        android:text="Product Quantity:"
        android:textColor="#433E92"
        android:textSize="20sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_delivery"
        app:layout_constraintVertical_bias="0.386">

    </TextView>

    <EditText
        android:id="@+id/product_quantity_input"
        android:layout_width="193dp"
        android:layout_height="55dp"
        android:paddingLeft="15dp"
        android:scrollbars="horizontal"
        android:background="@mipmap/parcel_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/product_size"
        app:layout_constraintTop_toBottomOf="@+id/imageView_delivery"
        app:layout_constraintVertical_bias="0.395">

    </EditText>

    <Button
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:text="Create"
        android:textColor="#fff"
        android:layout_width="162dp"
        android:layout_height="57dp"
        android:background="@mipmap/parcel_but"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_delivery"
        app:layout_constraintVertical_bias="0.57" />
</androidx.constraintlayout.widget.ConstraintLayout>