<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/pick_up_ui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.007"
        android:background="@mipmap/pickup_but"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/collection_image_ui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:src="@mipmap/pickuporange">

        </ImageView>

        <TextView
            android:id="@+id/collection_name_ui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="Pickup"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:textSize="15sp"
            android:fontFamily="@font/sitka_small"
            android:textColor="#000"
            >

        </TextView>

        <ImageView
            android:id="@+id/collection_option_ui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:src="@mipmap/menu">

        </ImageView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>